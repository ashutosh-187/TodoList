<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="css/style1.css">
</head>

<body>
    <div class="box">
        <h1 id="heading">Todo List</h1>
    </div>
    <div class="box">
        <% ejes.forEach(function(lists){ %>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox1" value="<%= lists._id%>" onchange="this.form.submit()">
                <p>
                    <%= lists.name%>
                </p>
            </div>
            </form>
            <% }) %>



                <form action="/list" method="post">
                    <input type="text" name="ele1" placeholder="Enter the task">
                    <button type="submit">+</button>
                </form>

    </div>

</body>

</html>